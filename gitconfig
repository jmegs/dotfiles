[user]
  name = John Meguerian
  email = johnmeguerian@gmail.com

[alias]
  aa = add --all
  cm = commit -m
  cma = commit --amend --no-edit
  st = status
  br = branch
	oops = !git reset --hard && git clean -dfi
	lg = log --oneline --decorate -20
	lga = log --oneline --decorate --graph --all -20
  mib = !git switch main && git merge - --ff-only

[color]
	diff = auto
	status = auto
	branch = auto
	ui = true

[core]
	attributesfile = ~/.gitattributes
	excludesfile = ~/.gitignore
	pager = diff-so-fancy | less -RFX
	autocrlf = input
	editor = nvim

[github]
  user = jmegs

[pull]
  rebase = true

[push]
  default = current
  followTags = true

[fetch]
	prune = true

[rebase]
  # https://thoughtbot.com/blog/autosquashing-git-commits
  autosquash = true

[diff]
  colorMoved = zebra

[init]
  defaultBranch = main
